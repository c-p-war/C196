<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Terms"
            android:layout_width="160dp"
            android:layout_height="80dp" android:id="@+id/btnTerms"
            android:onClick="toTerms" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"/>
    <Button
            android:text="Courses"
            android:layout_width="160dp"
            android:layout_height="80dp" android:id="@+id/btnCourses"
            android:onClick="toCourses" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="317dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="122dp"/>
    <Button
            android:text="Assesments"
            android:layout_width="160dp"
            android:layout_height="80dp" android:id="@+id/btnAssesments"
            android:onClick="toAssesments"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="480dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="125dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
