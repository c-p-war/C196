<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="407dp"
            android:layout_height="722dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:text="Terms"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/btnTerms"
                    android:onClick="toTerms" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />
            <Button
                    android:text="Courses"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/btnCourses"
                    android:onClick="toCourses" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />
            <Button
                    android:text="Assessments"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/btnAssessments"
                    android:onClick="toAssessments" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
